<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/shelterDonationObjectImageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="11dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/shelterDonationObjectLayer"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/shelterDonationObjectImageView"
        app:layout_constraintStart_toStartOf="@id/shelterDonationObjectImageView"
        app:layout_constraintTop_toTopOf="@id/shelterDonationObjectImageView"
        app:srcCompat="@drawable/shelter_donation_layer" />

    <TextView
        android:id="@+id/shelterDonationObjectTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:gravity="start"
        android:includeFontPadding="false"
        android:text="Object"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/shelterDonationObjectImageView"
        app:layout_constraintStart_toStartOf="@id/shelterDonationObjectImageView"
        app:layout_constraintTop_toBottomOf="@+id/shelterDonationObjectImageView" />

    <com.loopeer.shadow.ShadowView
        android:id="@+id/shelterDonationObjectCheckImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:visibility="invisible"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shadowColor="#26000000"
        app:shadowMargin="5dp"
        app:shadowRadius="6dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/icon_check_true" />

    </com.loopeer.shadow.ShadowView>

</androidx.constraintlayout.widget.ConstraintLayout>